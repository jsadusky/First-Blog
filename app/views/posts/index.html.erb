<%= render "navigationBar" %>

<div class="hero-unit">
  <h1>Welcome</h1>
  <h2>To my Blog
  <p><a class="btn primary large pull-right" href="mailto:jsadusky@gmail.com">Contact me &raquo;</a></p>
</div>

<h1>Listing posts</h1>

<table class="table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Title</th>
      <th>Content</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>
 
<% @posts.each do |post| %>
  <tr>
    <td><%= post.name %></td>
    <td><%= post.title %></td>
    <td><%= post.content %></td>
    <td><%= link_to 'Show', post %></td>
    <td><%= link_to 'Edit', edit_post_path(post) %></td>
    <td><%= link_to 'Destroy', post, :confirm => 'Are you sure?',
                                     :method => :delete %></td>
  </tr>
<% end %>
</table>

