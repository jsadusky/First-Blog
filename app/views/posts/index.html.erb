<div class="navbar navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container">
      <ul class="nav">
        <li class="active">
          <a href="#">Home</a>
        </li>
        <li><%= link_to 'New Post', new_post_path %></li>
        <li><a href="#">Contact Me</a></li>
      </ul>
    </div>
