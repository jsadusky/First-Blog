</div>

<div class="hero-unit">
  <h1>Welcome</h1>
  <h2>To my Blog
  <p><a class="btn primary large pull-right">Contact me &raquo;</a></p>
</div>

<h1>Listing posts</h1>
<div class="row">
  <div class="span2">
    <h3>Name</h3>
  </div>
  <div class="span4">  
    <h3>Title</h3>
  </div>
  <div class="span6">
    <h3>Content</h3>
  </div>
  <br />
</div> 


<% @posts.each do |post| %>
<div class="row ">
  <div class="span2">
    <%= post.name %>
  </div>
  <div class = "span4">
    <%= post.title %>
  </div>
  <div class = "span4">
    <%= post.content %>
  </div>
  <div class = "span2">
    <%= link_to 'Show', post, :class => "button" %>
    <%= link_to 'Edit', edit_post_path(post) %>
    <%= link_to 'Destroy', post, confirm: 'Are you sure?', method: :delete %>
  </div>
</div>
<% end %>

